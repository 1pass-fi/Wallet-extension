{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["src/*"],
      "shared/*": ["src/popup/components/shared/*"],
      "components/*": ["./src/popup/components/*"],
      "actions/*": ["./src/popup/actions/*"],
      "stories": ["stories"],
      "options/*": ["./src/options/*"]
    },
  },
  "include": ["./src/**/*"],
}